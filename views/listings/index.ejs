<% layout('layouts/bp') %>

<body>

  <div class="container mt-5">
    <div class="row g-4">
      <% for(let listing of listings) { %>
        <div class="col-sm-6 col-md-4 col-lg-3">
          <a href="/listing/<%= listing._id %> " class="text-decoration-none"> 

            <div class="card h-100 shadow-sm border-0">
              <img src="<%= listing.image.url %>" 
                   class="card-img-top img-fluid" 
                   style="height: 200px; object-fit: cover;" 
                   alt="Listing image">
  
              <div class="card-body d-flex flex-column">
                <h5 class="card-title text-primary fw-bold"><%= listing.title %></h5>
                <p class="card-text mb-2 text-muted"><i class="bi bi-geo-alt-fill"></i> <%= listing.location %>, <%= listing.country %></p>
                <p class="card-text fs-5 fw-semibold text-success">â‚¹ <%= Number(listing.price).toLocaleString("en-IN") %></p>
  
                <div class="mt-auto d-flex justify-content-between align-items-center">
                  <a href="/listing/<%= listing._id %>" class="btn btn-info btn-sm text-white">
                    <i class="bi bi-eye-fill me-1"></i> View
                  </a>
                  <a href="/listing/<%= listing._id %>/edit" class="btn btn-warning btn-sm text-white">
                    <i class="bi bi-pencil-fill me-1"></i> Edit
                  </a>
                  <form method="POST" action="/listing/<%= listing._id %>?_method=DELETE" style="display:inline;">
                    <button class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this listing?');">
                      <i class="bi bi-trash-fill me-1"></i> Delete
                    </button>
                  </form>
                </div>
              </div>
  
            </div>
          </a>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Bootstrap Icons CDN for icons used -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

  <!-- Bootstrap JS Bundle (includes Popper) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-q7N0GSkWCEJH3g0uYcWUJ4PSmKZIVxTfGvl6Y0YB5okGhuwVhZlMZ1EEZrD2T1MG" crossorigin="anonymous"></script>
  <script src="/js/script.js"></script>
</body>
